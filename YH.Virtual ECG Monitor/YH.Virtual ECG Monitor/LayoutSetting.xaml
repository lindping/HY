<Window x:Class="YH.Virtual_ECG_Monitor.LayoutSetting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lib="clr-namespace:HYS.Library;assembly=HYS.Library"
        xmlns:local="clr-namespace:YH.Virtual_ECG_Monitor"
        mc:Ignorable="d"
        Title="检测仪版面设定" Height="600" Width="1024">
    <Window.Resources>
        <lib:ObjectToBoolConverter  x:Key="ObjectToBoolConverter"></lib:ObjectToBoolConverter>      
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition ></RowDefinition>
            <RowDefinition ></RowDefinition>
            <RowDefinition ></RowDefinition>
            <RowDefinition ></RowDefinition>
            <RowDefinition ></RowDefinition>           
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" ></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="150"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Click="Button_Click"  Tag="1">
                <TextBlock Height="30">5波形版面</TextBlock>
            </Button>
        </DockPanel>
        <DockPanel Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Click="Button_Click" Tag="2">
                <TextBlock Height="30">4波形版面</TextBlock>
            </Button>
        </DockPanel>
        <DockPanel Grid.Column="0" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Click="Button_Click" Tag="3">
                <TextBlock Height="30">3波形版面</TextBlock>
            </Button>
        </DockPanel>
        <DockPanel Grid.Column="0" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Click="Button_Click" Tag="4">
                <TextBlock Height="30">大数字版面</TextBlock>
            </Button>
        </DockPanel>
        
        <DockPanel Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2"  VerticalAlignment="Center">
            <TextBlock Height="20" >版面名称:</TextBlock>
            <TextBox Height="50"></TextBox>
        </DockPanel>
        
        <Grid x:Name="grid_1" Visibility="Hidden" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" > 
                <Grid.RowDefinitions>
                    <RowDefinition ></RowDefinition>
                    <RowDefinition ></RowDefinition>
                    <RowDefinition ></RowDefinition>
                    <RowDefinition ></RowDefinition>
                    <RowDefinition ></RowDefinition>
                    <RowDefinition ></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <DockPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
                <Button Click="Button_Click_1"  Tag="0">
                        <TextBlock>波形1</TextBlock>
                </Button>
                </DockPanel>
                <DockPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">
                <Button Click="Button_Click_1"  Tag="0">
                        <TextBlock>波形2</TextBlock>
                    </Button>
                </DockPanel>
                <DockPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3">
                <Button Click="Button_Click_1"  Tag="0">
                        <TextBlock>波形3</TextBlock>
                    </Button>
                </DockPanel>
                <DockPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3">
                <Button Click="Button_Click_1"  Tag="0">
                        <TextBlock>波形4</TextBlock>
                    </Button>
                </DockPanel>
                <DockPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3">
                <Button Click="Button_Click_1"  Tag="0">
                        <TextBlock>波形5</TextBlock>
                    </Button>
                </DockPanel>

                <DockPanel Grid.Row="0" Grid.Column="3">
                <Button Click="Button_Click_1"  Tag="1">
                        <TextBlock>视窗1</TextBlock>
                    </Button>
                </DockPanel>
                <DockPanel Grid.Row="1" Grid.Column="3">
                <Button Click="Button_Click_1"  >
                        <TextBlock>视窗2</TextBlock>
                    </Button>
                </DockPanel>
                <DockPanel Grid.Row="2" Grid.Column="3">
                <Button Click="Button_Click_1"  >
                        <TextBlock>视窗3</TextBlock>
                    </Button>
                </DockPanel>
                <DockPanel Grid.Row="3" Grid.Column="3">
                <Button Click="Button_Click_1"  Tag="1">
                        <TextBlock>视窗4</TextBlock>
                    </Button>
                </DockPanel>
                <DockPanel Grid.Row="4" Grid.Column="3">
                    <Button>
                        <TextBlock>视窗5</TextBlock>
                    </Button>
                </DockPanel>
                <DockPanel Grid.Row="5" Grid.Column="3">
                <Button Click="Button_Click_1"  Tag="1">
                        <TextBlock>视窗8</TextBlock>
                    </Button>
                </DockPanel>

                <DockPanel Grid.Row="5" Grid.Column="0">
                <Button Click="Button_Click_1"  Tag="2">
                        <TextBlock>无创血压</TextBlock>
                    </Button>
                </DockPanel>

                <DockPanel Grid.Row="5" Grid.Column="1">
                <Button Click="Button_Click_1">
                        <TextBlock>视窗6</TextBlock>
                    </Button>
                </DockPanel>
                <DockPanel Grid.Row="5" Grid.Column="2">
                <Button Click="Button_Click_1">
                        <TextBlock>视窗7</TextBlock>
                    </Button>
                </DockPanel>
            </Grid>
        <Grid x:Name="grid_2" Visibility="Hidden" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2"  >
                <Grid.RowDefinitions>                  
                    <RowDefinition ></RowDefinition>
                    <RowDefinition ></RowDefinition>
                    <RowDefinition ></RowDefinition>
                    <RowDefinition ></RowDefinition>
                    <RowDefinition ></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <DockPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
                    <Button>
                        <TextBlock>波形1</TextBlock>
                    </Button>
                </DockPanel>
                <DockPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">
                    <Button>
                        <TextBlock>波形2</TextBlock>
                    </Button>
                </DockPanel>
                <DockPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3">
                    <Button>
                        <TextBlock>波形3</TextBlock>
                    </Button>
                </DockPanel>
                <DockPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3">
                    <Button>
                        <TextBlock>波形4</TextBlock>
                    </Button>
                </DockPanel>               

                <DockPanel Grid.Row="0" Grid.Column="3">
                    <Button>
                        <TextBlock>视窗1</TextBlock>
                    </Button>
                </DockPanel>
                <DockPanel Grid.Row="1" Grid.Column="3">
                    <Button>
                        <TextBlock>视窗2</TextBlock>
                    </Button>
                </DockPanel>
                <DockPanel Grid.Row="2" Grid.Column="3">
                    <Button>
                        <TextBlock>视窗3</TextBlock>
                    </Button>
                </DockPanel>
                <DockPanel Grid.Row="3" Grid.Column="3">
                    <Button>
                        <TextBlock>视窗4</TextBlock>
                    </Button>
                </DockPanel>
               
                <DockPanel Grid.Row="4" Grid.Column="3">
                    <Button>
                        <TextBlock>视窗7</TextBlock>
                    </Button>
                </DockPanel>

                <DockPanel Grid.Row="4" Grid.Column="0">
                    <Button>
                        <TextBlock>无创血压</TextBlock>
                    </Button>
                </DockPanel>

                <DockPanel Grid.Row="4" Grid.Column="1">
                    <Button>
                        <TextBlock>视窗5</TextBlock>
                    </Button>
                </DockPanel>
                <DockPanel Grid.Row="4" Grid.Column="2">
                    <Button>
                        <TextBlock>视窗6</TextBlock>
                    </Button>
                </DockPanel>
            </Grid>
        <Grid x:Name="grid_3" Visibility="Hidden" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" >
            <Grid.RowDefinitions>
                <RowDefinition ></RowDefinition>
                <RowDefinition ></RowDefinition>
                <RowDefinition ></RowDefinition>
                <RowDefinition ></RowDefinition>
              
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4">
                <Button>
                    <TextBlock>波形1</TextBlock>
                </Button>
            </DockPanel>
            <DockPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4">
                <Button>
                    <TextBlock>波形2</TextBlock>
                </Button>
            </DockPanel>
            <DockPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4">
                <Button>
                    <TextBlock>波形3</TextBlock>
                </Button>
            </DockPanel>
          

            <DockPanel Grid.Row="3" Grid.Column="1">
                <Button>
                    <TextBlock>视窗1</TextBlock>
                </Button>
            </DockPanel>
            <DockPanel Grid.Row="3" Grid.Column="2">
                <Button>
                    <TextBlock>视窗2</TextBlock>
                </Button>
            </DockPanel>
            <DockPanel Grid.Row="3" Grid.Column="3">
                <Button>
                    <TextBlock>视窗3</TextBlock>
                </Button>
            </DockPanel>
          
         

            <DockPanel Grid.Row="3" Grid.Column="0">
                <Button>
                    <TextBlock>无创血压</TextBlock>
                </Button>
            </DockPanel>

          
        </Grid>
        <Grid x:Name="grid_4" Visibility="Hidden" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" >
            <Grid.RowDefinitions>
                <RowDefinition ></RowDefinition>
                <RowDefinition ></RowDefinition>
                <RowDefinition ></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>           
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Row="0" Grid.Column="0">
                <Button>
                    <TextBlock>波形1</TextBlock>
                </Button>
            </DockPanel>
            <DockPanel Grid.Row="0" Grid.Column="1" >
                <Button>
                    <TextBlock>波形2</TextBlock>
                </Button>
            </DockPanel>
            <DockPanel Grid.Row="2" Grid.Column="1" >
                <Button>
                    <TextBlock>波形3</TextBlock>
                </Button>
            </DockPanel>


            <DockPanel Grid.Row="1" Grid.Column="1">
                <Button>
                    <TextBlock>视窗1</TextBlock>
                </Button>
            </DockPanel>        

            <DockPanel Grid.Row="1" Grid.Column="0" Grid.RowSpan="2">
                <Button>
                    <TextBlock>无创血压</TextBlock>
                </Button>
            </DockPanel>


        </Grid>
        <StackPanel Grid.Column="2" Grid.Row="1" Grid.RowSpan="2"  HorizontalAlignment="Center">
            <TextBlock>可提供参数</TextBlock>
            <ListBox x:Name="lbWaveCategory"   DisplayMemberPath="Text"  SelectedValuePath="Value">              
            </ListBox>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="10,0">
            <TextBlock Height="25" Width="60">初始状态</TextBlock>
            <DockPanel Width="500" Height="25" >
                <RadioButton  GroupName="rbLevel" IsChecked="{ Binding  Mode=TwoWay, Path=Level, Converter={StaticResource ObjectToBoolConverter}, ConverterParameter=开}" Content="开" Margin="5"/>
                <RadioButton  GroupName="rbLevel" IsChecked="{ Binding  Mode=TwoWay, Path=Level, Converter={StaticResource ObjectToBoolConverter}, ConverterParameter=关}" Content="关" Margin="5"/>
                <RadioButton  GroupName="rbLevel" IsChecked="{ Binding  Mode=TwoWay, Path=Level, Converter={StaticResource ObjectToBoolConverter}, ConverterParameter=空}" Content="空" Margin="5"/>
            </DockPanel>
        </StackPanel>
       

        <DockPanel Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="4" HorizontalAlignment="Center">
            <Button Width="100" Height="40" Margin="20,0,20,0">打开设定</Button>
            <Button Width="100" Height="40" Margin="20,0,20,0">保存设定</Button>
            <Button Width="100" Height="40" Margin="20,0,20,0">设为默认</Button>
            <Button Width="100" Height="40" Margin="20,0,20,0">确定</Button>
            <Button Width="100" Height="40" Margin="20,0,20,0">应用</Button>
            <Button Width="100" Height="40" Margin="20,0,20,0">取消</Button>
        </DockPanel>

    </Grid>
</Window>
