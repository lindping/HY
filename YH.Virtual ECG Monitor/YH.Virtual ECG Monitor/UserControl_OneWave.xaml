<UserControl x:Class="YH.Virtual_ECG_Monitor.UserControl_OneWave"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YH.Virtual_ECG_Monitor"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="800"  >
    
    <Canvas x:Name="myCanvas"    Margin="0,0,0,0"   Background="Black"   VerticalAlignment="Stretch">   
        <Polyline x:Name="polyline" Margin="0,0,0,0" Points="0,0" Stroke="Green"     StrokeThickness="2" StrokeLineJoin="Round"  FillRule="EvenOdd" VerticalAlignment="Center" />
    </Canvas>
</UserControl>
