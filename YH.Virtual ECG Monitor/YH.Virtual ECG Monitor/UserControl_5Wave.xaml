                    </DockPanel>
                </Border>
                <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" CornerRadius="0" Padding="5" Margin="1" BorderBrush="#f1f1f1" BorderThickness="0" Style="{DynamicResource bg1}">
