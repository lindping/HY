                            </Viewbox>
                        </Grid>
                    </DockPanel>
                </Border>
                <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" CornerRadius="0" Padding="5" Margin="1" BorderBrush="#f1f1f1" BorderThickness="0" Style="{DynamicResource bg1}">
                    <DockPanel>
                        <TextBlock Style="{DynamicResource font1}" Text="波形3" Margin="0,0,10,0"  Width="36"/>
